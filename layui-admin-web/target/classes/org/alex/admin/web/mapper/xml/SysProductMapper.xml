    <select id="queryProduct" resultMap="productMap" parameterType="java.lang.String">
        SELECT  t.* FROM sys_product t
        <where>
            1=1
            <if test="productName!=null and productName!='' ">
                and t.productName like concat('%',#{productName},'%')
            </if>
        </where>
        ORDER BY id
    </select>

